{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://raw.githubusercontent.com/openminted/omtd-registry/develop/omtd-registry-api/src/main/resources/jsonSchema/fileStats.json",
  "type": "object",
  "extends": {
    "$ref": "identifiableResource.json"
  },
  "allOf": [
    {
      "$ref": "identifiableResource.json"
    }
  ],
  "properties": {
    "archiveId": {
      "type": "string"
    },
    "sizeOnDisk": {
      "type": "integer"
    },
    "size": {
      "type": "integer"
    },
    "fileCount": {
      "type": "integer"
    },
    "filename": {
      "type": "string"
    },
    "info": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "fileType": {
            "type": "string"
          },
          "count": {
            "type": "integer"
          }
        }
      }
    }
  }
}