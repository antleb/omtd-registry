<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="LOG4J2 %d{HH:mm:ss.SSS} %-5level %highlight{%c{1}} - %msg%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Root level="INFO">
      <AppenderRef ref="Console"/>
    </Root>
    <Logger name="eu.openminted" level="DEBUG"
            additivity="false">
      <Appender-ref ref="Console" level="DEBUG" />
    </Logger>
  </Loggers>
</Configuration>
