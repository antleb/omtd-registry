<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration debug="true"
                     xmlns:log4j='http://jakarta.apache.org/log4j/'>

    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                   value="LOG4J %d{HH:mm:ss} %-5p %c{1}:%L - %m%n" />
        </layout>
    </appender>
    <appender name="void" class="org.apache.log4j.varia.NullAppender"/>

    <!-- categories -->
    <category name="springfox">
        <priority value="OFF" />
    </category>
    <category name="org.elasticsearch">
        <priority value="OFF" />
    </category>

    <!--<logger name="springfox" additivity="false">-->
        <!--<level value="ALL"/>-->
        <!--<appender-ref ref="void"/>-->
    <!--</logger>-->
    <!--<logger name="org.elasticsearch.deprecation" additivity="false">-->
        <!--<level value="ALL"/>-->
        <!--<appender-ref ref="void"/>-->
    <!--</logger>-->
    <root>
        <level value="WARN" />
        <appender-ref ref="console" />
    </root>

</log4j:configuration>